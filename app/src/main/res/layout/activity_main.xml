<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.veri.aplhitunglingkaran.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/masukan_jari_jari_lingkaran"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/jariInput"
        android:inputType="number"
        android:hint="Masukan Jari-Jari Lingkaran"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/kell"
            android:layout_weight="1"
            android:onClick="Kell"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Keliling"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/luas"
            android:layout_weight="1"
            android:onClick="Luas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Luas"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/Hasil"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="0"
        android:layout_gravity="center"
        android:textSize="50sp"
        android:textAlignment="center"/>
    <Button
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="#FF0000"
        android:text="Hapus"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>
</LinearLayout>
